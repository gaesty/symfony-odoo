{% extends 'base.html.twig' %}

{% block title %}Partners{% endblock %}

{% block body %}
    {% embed 'components/data_table.html.twig' with {
        title: 'Partners',
        create_path: 'odoo_partner_create',
        table_id: 'partners-table'
    } %}
        {% block table_headers %}
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        {% endblock %}

        {% block table_body %}
            {% for res in result %}
                <tr>
                    <td>{{ res.id }}</td>
                    <td>{{ res.name }}</td>
                    <td>{{ res.email }}</td>
                    <td>{{ res.phone }}</td>
                    <td>
                        <div class="action-buttons">
                            <a href="{{ path('odoo_partner_view', {'id': res.id}) }}" 
                               class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a href="{{ path('odoo_partner_update', {'id': res.id}) }}" 
                               class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <form action="{{ path('odoo_partner_delete', {'id': res.id}) }}" 
                                  method="POST" 
                                  class="d-inline" 
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce partenaire ?');">
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun partenaire trouvé</td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}