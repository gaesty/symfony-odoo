{# templates/odoo/xjit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Just In Time{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">Just in Time Records</h1>
        <a href="{{ path('odoo_jit_create') }}" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Nouveau JIT
        </a>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0">Liste des enregistrements</h5>
            {# <div class="btn-group btn-group-sm">
                <button type="button" class="btn btn-outline-secondary">Exporter</button>
                <button type="button" class="btn btn-outline-secondary">Filtrer</button>
            </div> #}
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0" id="jit-table">
                    <thead class="table-light">
                        <tr>
                            <th class="fw-semibold py-3">ID</th>
                            <th class="fw-semibold py-3">Nom</th>
                            <th class="fw-semibold py-3">Date</th>
                            <th class="fw-semibold py-3 text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for record in result %}
                            <tr>
                                <td>{{ record.id }}</td>
                                <td>{{ record.display_name }}</td>
                                <td>{{ record.create_date }}</td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a href="{{ path('odoo_jit_info', { 'id': record.id }) }}" 
                                           class="btn btn-sm btn-info" title="Voir les détails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('odoo_jit_update', { 'id': record.id }) }}" 
                                           class="btn btn-sm btn-warning" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="{{ path('odoo_jit_delete', {'id': record.id}) }}" 
                                              method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger" 
                                                    onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet enregistrement ?')"
                                                    title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center py-4 text-muted">
                                    <i class="fas fa-inbox fa-2x mb-3 d-block"></i>
                                    Aucun enregistrement trouvé
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">Total: {{ result|length }} enregistrement(s)</div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Vérifier si la table n'a pas déjà été initialisée
            if (!$.fn.DataTable.isDataTable('#jit-table')) {
                $('#jit-table').DataTable({
                    language: {
                        url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/fr-FR.json'
                    },
                    pageLength: 25,
                    dom: '<"top"flp>rt<"bottom"ip>',
                    responsive: true,
                    // Réduire l'utilisation mémoire
                    deferRender: true,
                    stateSave: false
                });
            }
        });
    </script>
{% endblock %}