{# templates/components/data_table.html.twig #}
{% set title = title|default('Liste des donn√©es') %}
{% set create_path = create_path|default(null) %}
{% set table_id = table_id|default('data-table') %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css">
    <style>
        .table-container {
            padding: 20px;
            margin: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }
        .page-header {
            background-color: #f8f9fa;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
        }
        .action-buttons {
            display: flex;
            gap: 5px;
        }
    </style>
{% endblock %}

{% block data_table %}
    <div class="page-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-5">{{ title }}</h1>
                {% if create_path %}
                    <a href="{{ path(create_path) }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add New Record
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="page-header table-container">
        <table id="{{ table_id }}" class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    {% block table_headers %}{% endblock %}
                </tr>
            </thead>
            <tbody>
                {% block table_body %}{% endblock %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block table_scripts %}
    <script>
        $(document).ready(function() {
            if ($.fn.DataTable.isDataTable('#{{ table_id }}')) {
                $('#{{ table_id }}').DataTable().destroy();
            }
            
            $('#{{ table_id }}').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/fr-FR.json'
                },
                pageLength: 10,
                order: [[0, 'desc']],
                responsive: true,
                dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                     '<"row"<"col-sm-12"tr>>' +
                     '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                retrieve: true
            });
        });
    </script>
{% endblock %}