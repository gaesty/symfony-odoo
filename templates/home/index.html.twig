{# templates/home/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Accueil - Align Aero{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Align Aero</h1>
        <p class="lead">Plateforme de gestion intégrée</p>
        <hr class="my-4 w-25 mx-auto">
    </div>
    
    <div class="row row-cols-1 row-cols-md-2 g-4 mb-5">
        <!-- Partners Card -->
        <div class="col">
            <div class="card h-100 shadow-sm border-0 rounded-3 hover-card">
                <div class="card-body text-center p-4">
                    <div class="icon-circle bg-primary text-white mx-auto mb-4">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                    <h2 class="card-title h3 mb-3">Partners</h2>
                    <p class="card-text text-muted mb-4">Gérer les partenaires, clients et fournisseurs de votre entreprise.</p>
                    <div class="d-grid gap-2">
                        <a href="{{ path('odoo_partners') }}" class="btn btn-outline-primary">
                            Accéder <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- JIT Card -->
        <div class="col">
            <div class="card h-100 shadow-sm border-0 rounded-3 hover-card">
                <div class="card-body text-center p-4">
                    <div class="icon-circle bg-success text-white mx-auto mb-4">
                        <i class="fas fa-cubes fa-2x"></i>
                    </div>
                    <h2 class="card-title h3 mb-3">JIT</h2>
                    <p class="card-text text-muted mb-4">Gestion des données Just-In-Time pour une production optimisée.</p>
                    <div class="d-grid gap-2">
                        <a href="{{ path('odoo_jit') }}" class="btn btn-outline-success">
                            Accéder <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- JIT Order Card -->
        <div class="col">
            <div class="card h-100 shadow-sm border-0 rounded-3 hover-card">
                <div class="card-body text-center p-4">
                    <div class="icon-circle bg-info text-white mx-auto mb-4">
                        <i class="fas fa-shipping-fast fa-2x"></i>
                    </div>
                    <h2 class="card-title h3 mb-3">JIT Order</h2>
                    <p class="card-text text-muted mb-4">Gestion des commandes Just-In-Time et suivi des livraisons.</p>
                    <div class="d-grid gap-2">
                        <a href="{{ path('odoo_jit_order') }}" class="btn btn-outline-info">
                            Accéder <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Inventory Card -->
        <div class="col">
            <div class="card h-100 shadow-sm border-0 rounded-3 hover-card">
                <div class="card-body text-center p-4">
                    <div class="icon-circle bg-warning text-white mx-auto mb-4">
                        <i class="fas fa-warehouse fa-2x"></i>
                    </div>
                    <h2 class="card-title h3 mb-3">Inventory</h2>
                    <p class="card-text text-muted mb-4">Gestion des stocks, inventaires et mouvements de produits.</p>
                    <div class="d-grid gap-2">
                        <a href="{{ path('odoo_inventory') }}" class="btn btn-outline-warning">
                            Accéder <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="card bg-light border-0 rounded-3 shadow-sm">
                <div class="card-body p-4 text-center">
                    <h3 class="mb-3">Besoin d'assistance ?</h3>
                    <p class="mb-3">Contactez notre équipe support pour toute question ou problème technique.</p>
                    <a href="#" class="btn btn-primary">
                        <i class="fas fa-headset me-2"></i> Support
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.icon-circle {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
}

.hover-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.hover-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
}
</style>
{% endblock %}